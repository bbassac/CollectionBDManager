<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/address_book" />/>

    <TextView
        android:id="@+id/serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="serie"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editeur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serie"
        android:layout_toEndOf="@+id/imageView"
        android:text="editeur"
        android:textColor="#ff009900"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editeur"
        android:layout_toEndOf="@+id/imageView"
        android:text="nom"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bd_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="#ff000000"
        android:text="1"
        android:layout_below="@+id/nom"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/serie_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:textColor="#ff000000"
        android:text="2"
        android:layout_below="@+id/bd_id"
        android:layout_toStartOf="@+id/bd_id" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/button"
        android:layout_alignEnd="@+id/serie"
        android:typeface="serif"
        android:layout_above="@+id/nom" />


</RelativeLayout>
